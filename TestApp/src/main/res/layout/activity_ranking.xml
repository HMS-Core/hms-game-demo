<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_head" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/btn_get_ranking_intent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="To Get Intent"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_get_ranking_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="To Get Rank Data"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_get_ranking_metadata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="To Rank Metadata"
                android:textAllCaps="false"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ff00ff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_set_ranking_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ranking_set_status"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/ranking_status_input"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:hint="int status"
                android:inputType="number"
                android:textSize="12sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_get_ranking_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ranking_get_status"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ff00ff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ranking ID:"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/ranking_id_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score:"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/ranking_score_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ScoreTag:"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/ranking_score_tag_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_submitScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="submitScore(id,score)"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_submitScoreTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="submitScore(id,score,tag)"
                android:textAllCaps="false"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_submitScoreImmediate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="submitScoreImmediate(id,score)"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_submitScoreImmediateTag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="submitScoreImmediate(id,score,tag)"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <include layout="@layout/layout_bottom" />

    </LinearLayout>
</ScrollView>